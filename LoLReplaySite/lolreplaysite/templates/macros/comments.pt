<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<div metal:define-macro="comments"
	 id="comments-container">
	<ul tal:condition="comments"
		id="comments-list">
		<li tal:repeat="comment comments" 
			class="comment">
			${comment.comment}
			<div>Posted by ${comment.name} on ${comment.datetime}</div>
		</li>
	</ul>
	<form action="${request.route_url('comment_on_replay', replay_id=replay_id)}"
		  method="post">
		<label id="name-label">Name</label>
		<input id="name"
			   name="name"
			   type="text"
			   value="${'' if not view.logged_in else view.logged_in}"/>
		<label id="comment-label">Comment</label>
		<textarea id="comment"
				  name="comment"></textarea>
		<input id="post"
			   name="form"
			   type="submit"
			   value="Post comment" />
	</form>
</div>