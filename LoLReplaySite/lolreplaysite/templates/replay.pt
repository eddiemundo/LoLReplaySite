<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<metal:block use-macro="view.base_macro">
	<metal:block fill-slot="content">
		<metal:block use-macro="view.replay_macro">
			<metal:block fill-slot="tab-content">
				<ul id="comments_reviews_menu">
					<li><a id="comments-button" 
						   href="#comments"><b>Comments(${len(comments)})</b></a></li>
				</ul>
				<div id="comments-container">
					<ul tal:condition="comments"
						id="comments-list">
						<li tal:repeat="comment comments" 
							class="comment">
							${comment.comment}
							<div>Posted by ${comment.name} on ${comment.datetime}</div>
						</li>
					</ul>
					<form action="${request.route_url('comment_on_replay', replay_id=replay_id)}"
						  method="post">
						<label id="name-label">Name</label>
						<input id="name"
							   name="name"
							   type="text"
							   value="${'' if not view.logged_in else view.logged_in}"/>
						<label id="comment-label">Comment</label>
						<textarea id="comment"
								  name="comment"></textarea>
						<input id="post"
							   name="form"
							   type="submit"
							   value="Post comment" />
					</form>
				</div>
			</metal:block>
		</metal:block>
	</metal:block>
</metal:block>