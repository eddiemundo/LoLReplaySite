<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
	  xml:lang="en"
	  xmlns:tal="http://xml.zope.org/namespaces/tal"
	  xmlns:metal="http://xml.zope.org/namespaces/metal"
	  metal:define-macro="layout">

<head>
	<title>I'm Not Fucking Around: A LoL Replay Site</title>
	<meta http-equiv="Content-Type"
		  content="text/html;charset=UTF-8" />
	<link rel="stylesheet"
		  href="${request.static_url('lolreplaysite:static/main.css')}" type="text/css" media="screen" charset="utf-8" />
</head>

<body>
<div>
	<ul id="user_bar">
		<li tal:condition="not view.logged_in">
			<a href="/login">Log in</a>
		</li>
		<li class="user_menu"
			tal:condition="view.logged_in"
			tal:repeat="menu_item view.user_menu_items">
			<a href="${menu_item['href']}"
			   tal:condition="menu_item['name'] == 'Notifications'">
				<img class='mail_icon'
					 src="${menu_item['src']}" />(0)
			</a>
			<a href="${menu_item['href']}"
			   tal:condition="menu_item['name'] != 'Notifications'">
			   ${menu_item['name']}
			</a>
		</li>
		<li class="logout"
			tal:condition="view.logged_in">
			<a href="/logout">Log out</a>
		</li>
		<li class="username"
			tal:condition="view.logged_in">
			${view.logged_in}
		</li>
	</ul>
	<img class="logo" /><ul id="main_menu"
		tal:define="menu_items view.main_menu_items">
		<li tal:repeat="menu_item menu_items"
			tal:switch="menu_item['active']">					
			<a tal:case="True" 
			   class="active_tab"
			   href="${menu_item['href']}">${menu_item['name']}</a>
			<a tal:case="False" 
			   href="${menu_item['href']}">${menu_item['name']}</a>
		</li>
	</ul>
	<div class="content">
		<metal:main define-slot="content" />
	</div>
</div>
</body>
</html>
